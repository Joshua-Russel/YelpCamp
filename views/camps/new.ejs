<% layout("layout/boilerplate") %>
<div class="row">
	<h1 class="text-center mb-3">Add Campgrounds</h1>
	<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 mb-4">
		<div class="card shadow">
			<div class="card-body">
				<form
					action="/camps/create"
					method="post"
					novalidate
					class="validate-form"
					enctype="multipart/form-data"
				>
					<div class="mb-3">
						<label
							for="title"
							class="form-label"
						>
							Title
						</label>
						<input
							type="text"
							name="camps[title]"
							class="form-control"
							id="title"
							required
						/>
						<div class="valid-feedback">Good!</div>
						<div class="invalid-feedback">Enter Title</div>
					</div>
					<div class="mb-3">
						<label
							for="location"
							class="form-label"
						>
							Location
						</label>
						<input
							name="camps[location]"
							type="text"
							id="location"
							class="form-control"
							required
						/>
					</div>
					<div class="mb-3">
						<label
							for="image"
							class="form-label"
						>
							Select Image(s)
						</label>
						<input
							class="form-control"
							type="file"
							name="image"
							id="image"
							multiple
						/>
					</div>
					<div class="mb-3">
						<label
							for="price"
							class="form-label"
						>
							Price
						</label>
						<div class="input-group mb-3">
							<span
								class="input-group-text"
								id="price-input"
							>
								$
							</span>
							<input
								name="camps[price]"
								type="text"
								class="form-control"
								placeholder="0.00"
								aria-label="price"
								aria-describedby="price-input"
								required
							/>
						</div>
					</div>
					<div class="mb-3">
						<label
							for="description"
							class="form-label"
						>
							Description
						</label>
						<textarea
							type="text"
							class="form-control"
							id="description"
							name="camps[description]"
							required
						></textarea>
					</div>
					<div class="mb-3">
						<button class="btn btn-dark w-50">Submit</button>
					</div>
				</form>
				<a
					class="btn btn-primary w-50"
					href="/camps"
				>
					All Camps
				</a>
			</div>
		</div>
	</div>
</div>
